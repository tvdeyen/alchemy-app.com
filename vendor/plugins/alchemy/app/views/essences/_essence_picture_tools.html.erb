<div class="picture_tool_button<%= options[:crop] ? '' : ' disabled' %>">
    <%- if options[:crop] -%>
	<%= link_to_overlay_window(
	    '',
	    crop_admin_essence_picture_path(content.essence, :size => options[:image_size]),
	    { :size => "fullscreen", :title => _('Edit Picturemask') },
	    { :class => "edit_picture_mask", :title => _('Edit Picturemask') }
	) %>
	<%- else -%>
	<a href="javascript:void(0)" class="edit_picture_mask"></a>
	<%- end -%>
</div>
<div class="picture_tool_button">
	<%= link_to_overlay_window("",
		url_for(
			:controller => 'pictures',
			:action => 'archive_overlay',
			:element_id => content.element,
			:content_id => content,
			:swap => true,
			:options => options
		),
		{
			:title => _('swap_image'),
    		:size => '800x450',
    		:resizable => "true"
		},
		:title => _('swap_image'),
		:class => 'swap_picture'
	) %>
</div>
<div class="picture_tool_button">
	<%= link_to_function(
		'',
		"openLinkWindow(this, 420)",
		:class => (content.essence.link.blank? ? 'edit_link' : 'edit_link linked'),
		:title => _('link_image'),
		:name => "essence_picture_#{content.id}",
		:id => "edit_link_#{content.id}"
	) %>
</div>
<div class="picture_tool_button">
	<%= link_to_function(
		"",
		"removePictureLink(#{content.id})",
		:class => 'remove_link',
		:title => _('unlink')
	) %>
</div>
<div class="picture_tool_button">
	<%= link_to_overlay_window("",
		edit_admin_essence_picture_path(
			:id => content.essence.id,
			:options => options
		),
		{
			:title => _('edit_image_properties'),
			:size => (options[:caption_as_textarea] ? (options[:manual_image_size] ? '365x200' : '365x180') : (options[:manual_image_size] ? '365x160' : '365x150'))
		},
		:class => 'edit_picture',
		:title => _('edit_image_properties')
	) %>
</div>
